{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "xvm",
	"scopeName": "source.xvm",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.xvm",
					"match": "\\b(as|let|const|if|else|while|foreach|in|for|break|continue|return)\\b"
				},
				{
					"name": "keyword.function.xvm",
					"match": "\\b(func|entry)\\b"
				},
				{
					"name": "support.function.xvm",
					"match": "\\b(println)\\b"
				},
				{
					"name": "storage.type.xvm",
					"match": "\\b(byte|short|int|long|bool|string)\\b"
				},
				{
					"name": "constant.numeric.xvm",
					"match": "\\b\\d+(L)?\\b"
				},
				{
					"name": "comment.line.xvm",
					"match": "\\/\\/.*"
				},
				{
					"name": "constant.language.xvm",
					"match": "\\b(true|false)\\b"
				},
				{
					"match": "(\\w+)\\(\\)",
					"captures": {
						"1": {
							"name": "entity.name.function.xvm"
						}
					}
				},
				{
					"match": "(struct)\\s+(\\w+)",
					"captures": {
						"1": {
							"name": "keyword.control.xvm"
						},
						"2": {
							"name": "entity.name.class.xvm"
						}
					}
				},
				{
					"match": "(\\w+):\\s+(\\w+)",
					"captures": {
						"1": {
							"name": "variable.name.xvm"
						},
						"2": {
							"name": "entity.name.class.xvm"
						}
					}
				},
				{
					"match": "(\\w+)\\.\\b(\\w+)(?!\\()\\b",
					"captures": {
						"2": {
							"name": "variable.name.xvm"
						}
					}
				},
				{
					"match": "(\\w+)\\.",
					"captures": {
						"1": {
							"name": "variable.name.xvm"
						}
					}
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.xvm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.xvm",
					"match": "\\\\."
				}
			]
		}
	}
}